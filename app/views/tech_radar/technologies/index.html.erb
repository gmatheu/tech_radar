<section class="tech-radar tech-radar-technologies">
<h1 class="h2">A-Z</h1>
<nav class="pagination">
  <% ('A'..'Z').each do |letter| %>
    <li><a href="#<%= letter %>"><%= letter %></a></li>
  <% end %>
</nav>
<% @technologies.group_by { |technology| technology.name[0].upcase }.each do |letter,technologies| %>
  <a name="<%= letter %>"></a>
  <h2 class="h3"><%= letter %></h2>
  <ul class="list-unstyled">
  <% technologies.each do |technology| %>
      <li>
        <h1 class="h4">
          <%= link_to technology.name, technology_path(technology.name) %>
          <small>
            <%= technology.purpose %>
            <span class="label label-<%= label_color_for_ring(technology.ring) %>"><%= technology.ring %></span>
            <%= render partial: 'tech_radar/technologies/tags.html.erb', locals: {technology: technology} %>
          </small>
        </h1>
      </li>
    <% end %>
  </ul>
<% end %>
</section>
